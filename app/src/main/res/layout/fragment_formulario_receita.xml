<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragment.FormularioReceitaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="TÃ­tulo"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Imagem:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSelecionarImagem"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Selecionar Imagem"
            android:layout_gravity="center"
            android:background="@color/dark_blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editModoPreparo"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Modo de preparo"
            android:inputType="textMultiLine"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            tools:ignore="HardcodedText"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSalvarAtualizarReceita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Salvar receita"
            android:background="@color/dark_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>